<?xml version="1.0" encoding="utf-8"?>
<ns:uws-settings
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns:ns='http://vocloud.rk.cz/schema'
    xsi:schemaLocation='http://vocloud.rk.cz/schema configSchema.xsd'>
    <ns:vocloud-server-address>http://localhost:8080/vocloud/deeplearning</ns:vocloud-server-address>
    <ns:local-address>http://localhost:8080</ns:local-address>
    <ns:max-jobs>1</ns:max-jobs>
    <ns:description>Universal UWS worker</ns:description>
    <ns:default-execution-duration>3600</ns:default-execution-duration>
    <ns:max-execution-duration>3600</ns:max-execution-duration>
        <ns:workers>
            <ns:worker>
                <ns:identifier>deeplearning</ns:identifier>
                <ns:description>run generic deep neural network on generic data</ns:description>
                <ns:restricted>false</ns:restricted>
                <ns:binaries-location>/usr/local/bin</ns:binaries-location>
                <ns:exec-command>
                    <ns:command>vodigger</ns:command>
                    <ns:command>--${phase}</ns:command>
                    <ns:command>${config-file}</ns:command>
                </ns:exec-command>
            </ns:worker>
        </ns:workers>
</ns:uws-settings>
